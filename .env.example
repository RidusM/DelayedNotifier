# Environment (local, dev, staging, prod)
ENV=local

# Application Settings
APP_PORT=8080
APP_NAME=delayed-notifier
APP_VERSION=1.0.0

# Service Configuration
SERVICE_QUERY_LIMIT=10          # Max notifications to process per batch (1-100)
SERVICE_RETRY_DELAY=5m          # Base delay between retries (1m-1h)
SERVICE_MAX_RETRIES=3           # Max retry attempts (1-10)

# PostgreSQL Database
DB_DSN=postgres://user:password@host:port/dbname?sslmode=disable
DB_POOL_MAX=20                  # Max connections in pool (1-100)
DB_CONN_ATTEMPTS=5              # Connection retry attempts (1-10)
DB_BASE_RETRY_DELAY=100ms       # Initial retry delay (10ms-10s)
DB_MAX_RETRY_DELAY=5s           # Max retry delay (100ms-30s)

# Redis Cache
CACHE_ADDR=localhost:6379
CACHE_PASSWORD=                 # Leave empty if no password
CACHE_POOL_SIZE=20              # Connection pool size (1-100)
CACHE_MIN_IDLE_CONS=10          # Min idle connections (1-100)
CACHE_POOL_TIMEOUT=4s           # Pool timeout (10ms-10s)

# RabbitMQ
RABBIT_URL=amqp://user:password@host:port/
RABBIT_CONNECTION_NAME=delayed-notifier-publisher
RABBIT_CONNECT_TIMEOUT=30s      # Connection timeout (1s-60s)
RABBIT_HEARTBEAT=10s            # Heartbeat interval (1s-60s)
RABBIT_EXCHANGE=notifications   # Exchange name
RABBIT_CONTENT_TYPE=application/json

# SMTP Email Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password # Use app-specific password for Gmail
SMTP_FROM=noreply@yourapp.com

# Telegram Bot
TG_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz # Get from @BotFather

# HTTP Server
HTTP_HOST=0.0.0.0
HTTP_PORT=8080
HTTP_READ_TIMEOUT=5s            # Request read timeout (1s-30s)
HTTP_WRITE_TIMEOUT=5s           # Response write timeout (1s-30s)
HTTP_IDLE_TIMEOUT=60s           # Keep-alive timeout (1s-300s)
HTTP_SHUTDOWN_TIMEOUT=10s       # Graceful shutdown timeout (1s-30s)
HTTP_READ_HEADER_TIMEOUT=5s     # Header read timeout (1s-30s)

# Logging
LOGGER_LEVEL=info               # debug, info, warn, error
LOGGER_FILENAME=./logs/delayed-notifier.log
LOGGER_MAX_SIZE=100             # Max log file size in MB (1-1000)
LOGGER_MAX_BACKUPS=3            # Number of old logs to keep (0-20)
LOGGER_MAX_AGE=28               # Max days to keep old logs (1-365)
