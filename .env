# Environment
ENV=local

# Application
APP_PORT=8080
APP_NAME=delayed-notifier
APP_VERSION=1.0.0

# Service
SERVICE_QUERY_LIMIT=10
SERVICE_RETRY_DELAY=5m
SERVICE_MAX_RETRIES=3

# Database (PostgreSQL)
DB_DSN=postgres://postgres:postgres@localhost:5432/delayed_notifier?sslmode=disable
DB_POOL_MAX=20
DB_CONN_ATTEMPTS=5
DB_BASE_RETRY_DELAY=100ms
DB_MAX_RETRY_DELAY=5s

# Cache (Redis)
CACHE_ADDR=localhost:6379
CACHE_PASSWORD=
CACHE_POOL_SIZE=20
CACHE_MIN_IDLE_CONS=10
CACHE_POOL_TIMEOUT=4s

# RabbitMQ Publisher
RABBIT_URL=amqp://guest:guest@localhost:5672/
RABBIT_CONNECTION_NAME=delayed-notifier-publisher
RABBIT_CONNECT_TIMEOUT=30s
RABBIT_HEARTBEAT=10s
RABBIT_EXCHANGE=notifications
RABBIT_CONTENT_TYPE=application/json

# SMTP (Email)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@yourapp.com

# Telegram Bot
TG_TOKEN=your-telegram-bot-token

# HTTP Server
HTTP_HOST=0.0.0.0
HTTP_PORT=8080
HTTP_READ_TIMEOUT=5s
HTTP_WRITE_TIMEOUT=5s
HTTP_IDLE_TIMEOUT=60s
HTTP_SHUTDOWN_TIMEOUT=10s
HTTP_READ_HEADER_TIMEOUT=5s

# Logger
LOGGER_LEVEL=info
LOGGER_FILENAME=./logs/delayed-notifier.log
LOGGER_MAX_SIZE=100
LOGGER_MAX_BACKUPS=3
LOGGER_MAX_AGE=28
